<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/title_bar_home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/menuButton"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menu_icon"
                     />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:src="@drawable/demo_profile"
                    app:civ_border_width="0dp"
                    app:civ_border_color="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/menuButton"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:layout_width="60dp"
                    android:layout_height="55dp"/>
                <LinearLayout
                    android:id="@+id/user_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/notification_img"
                    android:layout_toRightOf="@+id/profile"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/user_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name_txt"
                        android:fontFamily="@font/roboto_black"
                        android:textSize="18dp"
                        android:gravity="start|center"
                        android:paddingHorizontal="16dp"
                        android:textColor="@color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/user_id_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EE1"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="12dp"
                            android:gravity="start|center"
                            android:textStyle="bold"
                            android:paddingStart="16dp"
                            android:textColor="@color/text_Color_light"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/notification_img"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/baseline_notifications_active_24"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:paddingRight="10dp">
            <ImageView
                android:id="@+id/menuButton2"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/menu_icon"
                />
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/back_icon"
                />
            <TextView
                android:id="@+id/head_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:textFontWeight="400"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/add_uti_head"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="0dp"
            android:layout_marginTop="10dp"
            android:layout_above="@+id/bottom_navigation_layout"
            android:layout_below="@+id/title_bar_home_layout"
            android:background="@android:color/transparent"
             />

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="8dp"
            android:gravity="center"
            app:cardBackgroundColor="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:weightSum="4">
            <RelativeLayout
                android:id="@+id/search_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/search_menu_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/baseline_search_24"
                    />
                <TextView
                    android:id="@+id/search_menu_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_menu"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="12dp"
                    android:layout_below="@+id/search_menu_img"
                    android:gravity="bottom|center"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/home_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/home_menu_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_icon"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/home_menu_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_menu"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="12dp"
                    android:gravity="bottom|center"
                    android:visibility="visible"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/home_menu_img"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/add_new_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/add_menu_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/add_new_icon"
                    />
                <TextView
                    android:id="@+id/add_menu_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_new_menu"
                    android:layout_below="@+id/add_menu_img"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:visibility="visible"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logout_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/logout_menu_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logout_icon"
                    />
                <TextView
                    android:id="@+id/logout_menu_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/logout_menu_txt"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/logout_menu_img"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    </FrameLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:itemTextColor="@color/black"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>