<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ResetPasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/border_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:textFontWeight="500"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/old_pass"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:weightSum="2">
            <EditText
                android:id="@+id/et_old_pass"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1.7"
                android:hint="@string/enter_old_pass"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textFontWeight="400"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="10dp"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/txt_gray" />
                <TextView
                    android:id="@+id/show_old_tv"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="0.3"
                    android:gravity="start|center"
                    android:textFontWeight="400"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/show_txt"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:textFontWeight="500"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/new_pass"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:weightSum="2">
                <EditText
                    android:id="@+id/et_new_pass"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.7"
                    android:hint="@string/enter_new_pass"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:textFontWeight="400"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="10dp"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/txt_gray" />
                <TextView
                    android:id="@+id/show_new_tv"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="0.3"
                    android:gravity="start|center"
                    android:textFontWeight="400"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/show_txt"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:textFontWeight="500"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/confirm_pass"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:weightSum="2">
                <EditText
                    android:id="@+id/et_confirm_pass"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.7"
                    android:hint="@string/enter_confirm_pass"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:textFontWeight="400"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="10dp"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/txt_gray" />
                <TextView
                    android:id="@+id/show_confirm_tv"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="0.3"
                    android:gravity="start|center"
                    android:textFontWeight="400"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/show_txt"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:weightSum="2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveBtn"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:background="@drawable/button_shape"
                    android:text="@string/change_pass"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>